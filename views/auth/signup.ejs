<link href="../css/style.css" rel="stylesheet">

<h2>Signup</h2>

<form action="/auth/signup" method="POST">
  <div class="form-group">
    <label for="authEmail">Email:</label>
    <br>
    <input id="authEmail" class="form" type="text" name="email">
  </div>

  <div class="form-group">
    <label for="authName">Name:</label>
    <br>
    <input id="authName" class="form" type="text" name="name">
  </div>

  <div class="form-group">
    <label for="authPassword">Password:</label>
    <br>
    <input id="authPassword" class="form" type="password" name="password">
 

  <input class="btn btn-primary submitBtn" type="submit">
  </div>
</form>
